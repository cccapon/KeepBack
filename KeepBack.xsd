<xs:schema id="KeepBack"
	elementFormDefault="qualified"
	targetNamespace="urn:keepback:schema:2013-02"
	xmlns          ="urn:keepback:schema:2013-02"
	xmlns:mstns    ="urn:keepback:schema:2013-02"
	xmlns:xs="http://www.w3.org/2001/XMLSchema"
	>

	<xs:element name="keepback">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="archive" maxOccurs="1" minOccurs="0" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="archive">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="folders" maxOccurs="1" minOccurs="0" />
			</xs:sequence>
			<xs:attribute name="month"  type="xs:integer" />
			<xs:attribute name="day"    type="xs:integer" />
			<xs:attribute name="hour"   type="xs:integer" />
			<xs:attribute name="minute" type="xs:integer" />
		</xs:complexType>
	</xs:element>

	<xs:element name="folders">
		<xs:complexType>
			<xs:sequence>
				<xs:element ref="folder" maxOccurs="unbounded" minOccurs="0" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="folder">
		<xs:complexType>
			<xs:all maxOccurs="1" minOccurs="0">
				<xs:element ref="includes"  maxOccurs="1" minOccurs="0" />
				<xs:element ref="histories" maxOccurs="1" minOccurs="0" />
				<xs:element ref="excludes"  maxOccurs="1" minOccurs="0" />
			</xs:all>
			<xs:attribute name="name"   type="xs:string"  />
			<xs:attribute name="path"   type="xs:string"  />
		</xs:complexType>
	</xs:element>

	<xs:element name="includes">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="include" maxOccurs="unbounded" minOccurs="0" type="pattern" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="histories">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="history" maxOccurs="unbounded" minOccurs="0" type="pattern" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:element name="excludes">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="exclude" maxOccurs="unbounded" minOccurs="0" type="pattern" />
			</xs:sequence>
		</xs:complexType>
	</xs:element>

	<xs:complexType name="pattern">
		<xs:simpleContent>
			<xs:extension base="xs:string">
				<xs:attribute name="debug"          type="xs:boolean"  />
				<xs:attribute name="case-sensitive" type="xs:boolean"  />
			</xs:extension>
		</xs:simpleContent>
	</xs:complexType>

</xs:schema>
